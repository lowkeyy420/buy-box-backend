{
    "canisters": {
        "express": {
            "type": "custom",
            "main": "src/backend/express_canister/index.ts",
            "candid": "src/backend/express_canister/index.did",
            "build": "npx azle express",
            "wasm": ".azle/express/backend.wasm",
            "gzip": true,
            "assets": [
                [
                    "src/frontend/dist",
                    "dist"
                ]
            ],
            "build_assets": "npm run build"
        },
        "transaction": {
            "type": "custom",
            "main": "src/backend/transaction_canister/index.ts",
            "candid": "src/backend/transaction_canister/index.did",
            "build": "npx azle transaction",
            "wasm": ".azle/transaction/transaction.wasm",
            "gzip": true,
            "build_assets": "npm run build"
        }
    }
}